<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Short Description"
        android:layout_below="@+id/textView5"
        android:background="@color/colorPrimaryDark"
        android:layout_height="100dp" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/incredient"
        android:hint="Incredient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/quantity"
        android:layout_below="@+id/textView6"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/quantity" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:text="Name "
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Preperation Steps "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incredient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText10"
        android:layout_toStartOf="@+id/add_categories_button"
        android:hint="Categorie Name"
        android:background="@color/colorPrimaryDark"
        android:layout_toLeftOf="@+id/add_categories_button"
        android:layout_height="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="Recipe Name "
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="30dp" />

    <Button
        android:text="Add"
        android:id="@+id/add_ingredients_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:elevation="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/editText9"/>

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/quantity"
        android:hint="Quantity"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/textView6"
        android:layout_toLeftOf="@+id/add_ingredients_button" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:id="@+id/add_categories_button"
        android:backgroundTint="@color/colorPrimary"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/editText10"
        android:layout_alignBottom="@+id/editText10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText9"
        android:hint="Step1, Step 2, ..."
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/addRecipe"
        android:layout_below="@+id/editText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Recipe"/>

</RelativeLayout>